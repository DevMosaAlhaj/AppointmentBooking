@model Appointment_Booking.Data.Dto.CampanyDto

@{
    ViewData["Title"] = "AddCampany";
}

<br />

<div class="row" style="margin-left:2%;margin-right:2%;">
    <div class="col-md-12 col-md-offset-12">

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Add Campany</h3>
            </div>
         
            <form asp-action="AddCampany" method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address.CountryName" class="control-label"></label>
                        <input asp-for="Address.CountryName" class="form-control" />
                        <span asp-validation-for="Address.CountryName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address.CityName" class="control-label"></label>
                        <input asp-for="Address.CityName" class="form-control" />
                        <span asp-validation-for="Address.CityName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address.StreetName" class="control-label"></label>
                        <input asp-for="Address.StreetName" class="form-control" />
                        <span asp-validation-for="Address.StreetName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address.Latitude" class="control-label"></label>
                        <input asp-for="Address.Latitude" class="form-control" />
                        <span asp-validation-for="Address.Latitude" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address.Longtitude" class="control-label"></label>
                        <input asp-for="Address.Longtitude" class="form-control" />
                        <span asp-validation-for="Address.Longtitude" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Website" class="control-label"></label>
                        <input asp-for="Website" class="form-control" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkStart" class="control-label"></label>
                        <input asp-for="WorkStart" class="form-control" />
                        <span asp-validation-for="WorkStart" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkEnd" class="control-label"></label>
                        <input asp-for="WorkEnd" class="form-control" />
                        <span asp-validation-for="WorkEnd" class="text-danger"></span>
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                        <div class="col-md-1">
                            <a asp-action="Index" class="btn btn-primary">Cancel</a>
                        </div>
                    </div>
                    
                </div>
            </form>
        </div>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
