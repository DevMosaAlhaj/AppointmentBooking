@model Appointment_Booking.Data.Dto.AppointmentDto

@{
    ViewData["Title"] = "Add Appointment";
    List<UserViewModel> users = ViewBag.users;
    List<CampanyViewModel> campanies = ViewBag.campanies;
}

<br />

<div class="row" style="margin-left:2%;margin-right:2%;">
    <div class="col-md-12 col-md-offset-12">

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Add Campany</h3>
            </div>

            <form asp-action="AddAppointment" method="post">
                <div class="card-body">

                    <div class="form-group">
                        <label asp-for="CampanyId" class="control-label"></label>

                        <select asp-for="CampanyId" class="form-control">

                            @foreach (CampanyViewModel campany in campanies)
                            {
                                <option value="@campany.Id">@campany.Name</option>
                            }

                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>

                        <select asp-for="UserId" class="form-control">

                            @foreach (UserViewModel user in users)
                            {
                                <option value="@user.Id">@{var fullName = $"{user.FirstName} {user.LastName}"; } @fullName</option>
                            }

                        </select>
                    </div>



                    <div class="form-group">
                        <label asp-for="BookingDateTime" class="control-label"></label>
                        <input asp-for="BookingDateTime" type="datetime" class="form-control" />
                        <span asp-validation-for="BookingDateTime" class="text-danger"></span>

      

                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>


                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-1">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                        <div class="col-md-1">
                            <a asp-action="Index" class="btn btn-primary">Cancel</a>
                        </div>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



}
